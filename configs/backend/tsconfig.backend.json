{
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "experimentalDecorators": true
        }
    },
    "compilerOptions": {
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "preserve",
        "strict": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["node", "express", "mocha"],

        "baseUrl": "../..",
        "paths": {
            "@api/*": ["./src/backend/api/*"],
            "@database/*": ["./src/backend/database/*"],
            "@domain/*": ["./src/backend/domain/*"]
        }
    }
}
